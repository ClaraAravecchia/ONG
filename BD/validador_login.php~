<?php
	include("conexao.php");
	include("classeControllerBD.php");
	
	$c = new ControllerBD($conexao);
	
	$colunas = array("ID_LOGIN","LOGIN.NOME AS NOME","PERMISSAO.ID_PERMISSAO AS PERMISSAO");
	$tabelas[0][0] = "LOGIN";
	$tabelas[0][1] = "PERMISSAO";
	
	$condicoes[0]["coluna"]="EMAIL";
	$condicoes[0]["valor"]= $_POST["LOGIN"];
	$condicoes[1]["coluna"]="SENHA";
	$condicoes[1]["valor"]= $_POST["SENHA"];
	
	$r = $c->selecionar($colunas,$tabelas,null,$condicoes,null);
	$linha = $r->fetch(PDO::FETCH_ASSOC);
	print_r($linha);
	
	
	if($linha!=null){
		session_start();
		$_SESSION["login"] = $linha;
		header("location: index.php");
	}
	else{
		header("location: form_login.php");
	}
?>  
